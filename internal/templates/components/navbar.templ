	<div class="sm:col-span-2 flex justify-between p-2 items-center" style="border-bottom: 1px solid black">
		@Logo()
		<div class="hidden sm:block mr-1">
			@NavLink("/", "Our Story")
			@NavLink("/", "Membership")
			@NavLink("/", "Write")
			@NavLink("/login", "Sign In")
		</div>
	</div>
}
